    /* Estilos para la página de inicio (ajustes para el banner) */
.home-container {
    padding: 30px;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 15px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.7);
    max-width: 1200px; /* Ancho máximo para el contenido de la home */
    margin: 50px auto;
    box-sizing: border-box; /* Asegura que el padding no cause desbordamiento */
}

.home-content {
    display: flex;
    align-items: center;
    justify-content: space-around;
    gap: 30px;
    flex-wrap: wrap;
}

.text-section {
    flex: 1;
    min-width: 300px;
    text-align: left;
    color: #FFFFFF;
}

.text-section h1 {
    font-size: 2.8em;
    margin-bottom: 0.5em;
    color: #D8C3A5;
    text-align: left;
}

.text-section p {
    font-size: 1.1em;
    line-height: 1.6;
    margin-bottom: 1em;
}

/* INICIO ESTILOS DEL BANNER */
.banner-section {
    flex: 1.5; /* Dale más espacio al banner que al texto */
    min-width: 350px; /* Ancho mínimo para el banner */
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative; /* Para los botones de navegación */
}

.slideshow-container {
    max-width: 700px; /* Ancho máximo del slideshow */
    position: relative;
    margin: auto;
    border-radius: 10px;
    overflow: hidden; /* Para contener las imágenes y el radio */
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
}

.banner-image {
    width: 100%;
    height: 400px; /* Altura fija para todas las imágenes del banner */
    object-fit: cover; /* Recorta la imagen para cubrir el espacio */
    border-radius: 10px; /* Asegura que la imagen tenga el mismo radio */
}

/* Oculta las imágenes por defecto */
.mySlides {
    display: none;
}

/* Botones de adelante y atrás */
.prev, .next {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: auto;
    padding: 16px;
    margin-top: -22px;
    color: white;
    font-weight: bold;
    font-size: 18px;
    transition: 0.6s ease;
    border-radius: 0 3px 3px 0;
    user-select: none;
    background-color: rgba(0,0,0,0.6); /* Fondo semi-transparente */
}

/* Posiciona el botón "siguiente" a la derecha */
.next {
    right: 0;
    border-radius: 3px 0 0 3px;
}

/* En hover, añade un fondo más oscuro */
.prev:hover, .next:hover {
    background-color: rgba(0,0,0,0.8);
}

/* Texto numerado (si lo quieres, lo tenemos oculto) */
.numbertext {
    color: #f2f2f2;
    font-size: 12px;
    padding: 8px 12px;
    position: absolute;
    top: 0;
}

/* Puntos de paginación/círculos */
.dot {
    cursor: pointer;
    height: 15px;
    width: 15px;
    margin: 0 2px;
    background-color: rgba(255,255,255,0.4);
    border-radius: 50%;
    display: inline-block;
    transition: background-color 0.6s ease;
}

.active-dot, .dot:hover {
    background-color: #D8C3A5; /* Color crema/beige al estar activo o en hover */
}

/* Animación de fade */
.fade {
    animation-name: fade;
    animation-duration: 1.5s;
}

@keyframes fade {
    from {opacity: .4}
    to {opacity: 1}
}
/* FIN ESTILOS DEL BANNER */

/* Media queries para responsividad (ajuste para el banner) */
@media (max-width: 768px) {
    .home-content {
        flex-direction: column;
        text-align: center;
    }
    .text-section {
        text-align: center;
    }
    .text-section h1 {
        text-align: center;
    }
    .button-group {
