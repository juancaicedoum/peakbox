   /* Estilos para las vistas de autenticación (login, registro) */
.auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 100px); /* Altura de la ventana menos el header */
    padding: 20px;
    box-sizing: border-box;
}

.auth-card {
    background: linear-gradient(145deg, rgba(46,64,83, 0.95), rgba(20,29,38, 0.9)); /* Degradado azul oscuro */
    border-radius: 20px; /* Bordes más redondeados */
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.8); /* Sombra más pronunciada */
    padding: 50px; /* Más padding */
    max-width: 480px; /* Un poco más ancho */
    width: 100%;
    text-align: center;
    color: #E0E0E0; /* Texto gris claro */
    border: 1px solid rgba(255, 255, 255, 0.1); /* Borde sutil */
    animation: fadeInScale 0.7s ease-out forwards; /* Animación de entrada */
}

/* Animación de entrada para la tarjeta */
@keyframes fadeInScale {
    from {
        opacity: 0;
        transform: scale(0.9) translateY(20px);
    }
    to {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}


.auth-card h2 {
    font-size: 2.5em; /* Título más grande */
    margin-bottom: 35px;
    color: #D8C3A5; /* Color crema/beige de la marca */
    text-shadow: 0 0 10px rgba(216, 195, 165, 0.5); /* Sombra de texto */
}

.auth-card .field {
    margin-bottom: 25px; /* Más espacio entre campos */
    text-align: left;
}

.auth-card label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
    color: #D8C3A5; /* Etiquetas en color crema/beige */
    font-size: 1.1em;
}

.auth-card .form-control {
    width: calc(100% - 24px); /* Ancho completo menos padding y borde */
    padding: 14px 12px; /* Más padding */
    border: 1px solid rgba(216, 195, 165, 0.4); /* Borde con acento de marca */
    border-radius: 10px; /* Bordes más redondeados */
    background-color: rgba(255, 255, 255, 0.05); /* Fondo muy sutilmente transparente */
    color: #FFFFFF; /* Texto blanco en el campo */
    box-sizing: border-box;
    font-size: 1em;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.auth-card .form-control:focus {
    border-color: #D8C3A5; /* Borde más brillante al enfocar */
    box-shadow: 0 0 15px rgba(216, 195, 165, 0.4); /* Sombra de enfoque */
    outline: none; /* Quita el outline por defecto del navegador */
}

.auth-card .form-control::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.auth-card .actions {
    margin-top: 40px; /* Más espacio para el botón principal */
}

.auth-card .btn-primary {
    padding: 18px 50px; /* Botón más grande */
    font-size: 1.5em; /* Texto más grande */
    border-radius: 60px; /* Más redondeado */
    background-color: #D8C3A5; /* Color crema/beige */
    color: #2E4053; /* Texto oscuro para contrastar */
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5); /* Sombra prominente */
    transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
}

.auth-card .btn-primary:hover {
    background-color: #C3AF94; /* Tono más oscuro al pasar el ratón */
    transform: translateY(-5px); /* Efecto de "levantamiento" */
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.7);
}

.auth-card .remember-me-checkbox {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-top: -15px; /* Ajusta para que no esté pegado al campo */
    margin-bottom: 25px; /* Más espacio debajo */
}

.auth-card .remember-me-checkbox input[type="checkbox"] {
    margin-right: 12px; /* Más espacio */
    width: 18px; /* Tamaño del checkbox */
    height: 18px;
    background-color: transparent;
    border: 2px solid #D8C3A5; /* Borde más visible */
    border-radius: 5px; /* Más redondeado */
    cursor: pointer;
    appearance: none; /* Quita el estilo por defecto del navegador */
    -webkit-appearance: none;
    -moz-appearance: none;
    position: relative;
}

.auth-card .remember-me-checkbox input[type="checkbox"]:checked {
    background-color: #D8C3A5; /* Fondo cuando está marcado */
    border-color: #D8C3A5;
}
.auth-card .remember-me-checkbox input[type="checkbox"]:checked::before {
    content: '✔'; /* Icono de check */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #2E4053; /* Color del check */
    font-size: 14px;
}

.auth-card .remember-me-checkbox label {
    margin-bottom: 0;
    font-weight: normal;
    color: #FFFFFF;
    font-size: 1em;
}

.auth-links {
    margin-top: 35px; /* Más espacio desde el botón */
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 25px;
}

.auth-links a {
    display: block;
    margin-bottom: 12px; /* Más espacio entre enlaces */
    color: #D8C3A5;
    font-size: 1.05em; /* Enlaces un poco más grandes */
    text-decoration: underline; /* Subrayado para mayor visibilidad */
    transition: color 0.3s ease;
}

.auth-links a:hover {
    color: #C3AF94;
}

